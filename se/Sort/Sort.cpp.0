#define TEST(x)

template <class I, class Less>
force_inline
void Order3__(I l, I& middle, I h, const Less& less)
{
	if(less(*middle, *l))
		Swap(middle, l);
	if(less(*h, *middle))
		Swap(middle, h);
	if(less(*middle, *l))
		Swap(middle, l);
}

template <class I, class Less>
void NewSort(I l, I h, const Less& less)
{
	for(;;) {
		int count = int(h - l);
		if(count < 2)
			return;
		if(count < 8) {                         // Final optimized SelectSort
			ForwardSort(l, h, less);
			return;
		}
		int pass = 4;
		for(;;) {
			HITCOUNT("Paritition");
			TEST(part_count += count);
			I middle = l + (count >> 1);        // get the middle element
			Order3__(l, middle, h - 1, less);
			if(count > 50000) {
				RTIMING("Extended middle");
				I h1 = l + (int)Random(count);
				I l1 = l + (int)Random(count);
				I m1 = l + (int)Random(count);
				I h2 = l + (int)Random(count);
				I l2 = l + (int)Random(count);
				I m2 = l + (int)Random(count);
				Order3__(l1, m1, h1, less);
				Order3__(l2, m2, h2, less);
//				DDUMP(*middle);
				Order3__(m1, middle, m2, less);
//				DDUMP(*m1);
//				DDUMP(*middle);
//				DDUMP(*m2);
//				DLOG("-------");
			}
//			IterSwap(l + 1, middle);            // move median pivot to l + 1
//			I ii = l + 1;
			IterSwap(l, middle);                // move median pivot to l
			I ii = l;
			for(I i = l + 1; i != h; ++i)   // do partitioning; l is pivot
				if(less(*i, *l))
					IterSwap(++ii, i);
			IterSwap(ii, l);                // put pivot back in between partitions
			I iih = ii;
			while(iih + 1 != h && !less(*ii, *(iih + 1))) // Find middle range of elements equal to pivot
				++iih;
			TEST(mid_count += iih - ii);
			if(pass > 5 || min(ii - l, h - iih) > (max(ii - l, h - iih) >> pass)) { // partition sizes ok or we have done max attempts
//				if(count > 500)
//					DLOG("Misbalance " << count << " " << (ii - l) << " - " << (h - iih - 1) << ": " << abs((ii - l) - (h - iih - 1)));
				TEST(misbalance += abs((ii - l) - (h - iih - 1)));
				if(ii - l < h - iih - 1) {       // schedule or recurse on smaller partition, tail on larger
					NewSort(l, ii, less); // resolve in this thread
					l = iih + 1;
				}
				else {
					NewSort(iih + 1, h, less); // resolve in this thread
					h = ii;
				}
				break;
			}
			HITCOUNT("Retry");
			IterSwap(l, l + (int)Random(count));     // try some other random elements for median pivot
			IterSwap(middle, l + (int)Random(count));
			IterSwap(h - 1, l + (int)Random(count));
			TEST(retry_count += count);
			pass++;
		}
	}
}

template <class T, class Less>
void NewSort(T& c, const Less& less)
{
	NewSort(c.Begin(), c.End(), less);
}

template <class T>
void NewSort(T& c)
{
	RTIMING("NewSort");
	typedef typename T::ValueType VT;
	NewSort(c.Begin(), c.End(), StdLess<VT>());
}

